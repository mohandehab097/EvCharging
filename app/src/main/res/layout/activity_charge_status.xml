<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22252D"
    tools:context=".MainActivity">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ellipse"
        android:padding="30dp"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:id="@+id/car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/carr"
        android:layout_marginTop="50dp"/>



    <TextView
        android:id="@+id/superChargeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/car"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Charge Status"
        android:textColor="@color/white"
        android:fontFamily="@font/adamina"
        android:textSize="30dp"
        />


    <TextView
        android:id="@+id/chargePercent"
        android:layout_width="230dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/superChargeIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        android:drawableStart="@drawable/charge_icon"
        android:layout_marginLeft="90dp"
        android:background="@drawable/gradient_background"
        android:textSize="19dp"
        android:textColor="@color/black"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginRight="100dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="58%"/>

    <TextView
        android:id="@+id/timeRemaining"
        android:layout_width="230dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/superChargeIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="90dp"
        android:background="@drawable/gradient_background"
        android:textSize="19dp"
        android:textColor="@color/black"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginRight="100dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="3 Hours Remaining"/>



    <TextView
        android:id="@+id/watt"
        android:layout_width="230dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/timeRemaining"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="90dp"
        android:background="@drawable/gradient_background"
        android:textSize="19dp"
        android:textColor="@color/black"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginRight="100dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="100 Watt"/>






    <TextView
        android:id="@+id/back"
        android:layout_width="230dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/timeRemaining"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="190dp"
        android:background="@drawable/gradient_background"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Back"/>


</androidx.constraintlayout.widget.ConstraintLayout>




